# this is the L1 aggregator
load name=dstat
config name=dstat producer=${host2} instance=localhost${i}/dstat schema=dstat component_id=${i} udata_default=${i} mmalloc=1 statm=1 stat=1 io=1
start name=dstat interval=3000000 offset=1000000

updtr_add name=allhosts interval=3000000 offset=1000000
updtr_prdcr_add name=allhosts regex=.*
updtr_start name=allhosts

